{
  "name": "@khoding/swiss-flag",
  "type": "module",
  "version": "2.1.0",
  "description": "A native Web Component for the Swiss Flag, with customizable animations.",
  "main": "./dist/swiss-flag.umd.js",
  "module": "./dist/swiss-flag.es.js",
  "exports": {
    ".": {
      "import": "./dist/swiss-flag.es.js",
      "require": "./dist/swiss-flag.umd.js"
    }
  },
  "scripts": {
    "dev": "vite -c vite.config.demo.js",
    "build": "vite build",
    "build:demo": "vite build -c vite.config.demo.js",
    "deploy": "vite build -c vite.config.demo.js && gh-pages -d dist-demo",
    "preview": "vite preview"
  },
  "keywords": [
    "web-component",
    "swiss-flag",
    "animation"
  ],
  "author": "Julien",
  "license": "MIT",
  "devDependencies": {
    "gh-pages": "^6.3.0",
    "lightningcss": "^1.31.1",
    "prettier": "^3.8.1",
    "prettier-plugin-css-order": "^2.2.0",
    "vite": "^7.3.1"
  },
  "browserslist": [
    "defaults"
  ]
}
